<p id="notice"><%= notice %></p>

<h1>Course Links</h1>

<table>
  <thead>
    <tr>
      <th>Parent</th>
      <th>Child</th>
      <th>Link type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_links.each do |course_link| %>
      <tr>
        <td><%= course_link.parent_id %></td>
        <td><%= course_link.child_id %></td>
        <td><%= course_link.link_type %></td>
        <td><%= link_to 'Show', course_link %></td>
        <td><%= link_to 'Edit', edit_course_link_path(course_link) %></td>
        <td><%= link_to 'Destroy', course_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course Link', new_course_link_path %>
