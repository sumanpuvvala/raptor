<%= form_for(topic) do |f| %>
  <% if topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label for="title_name">Name</label> 
    <%= f.text_field 'name', required: true %>
  </div>
  <div class="field">
    <label for="category_name">Category</label> 
    <%= f.collection_select :category_id, @categories.all, :id, :name, {include_blank: true}, {required: true} %>
  </div>
  <div class="field">
    <label for="classification_name">Classification</label> 
    <%= f.collection_select :classification_id, @classifications.all, :id, :name, {include_blank: true}, {required: true} %>
  </div>
  <div class="field">
    <label for="team_name">Team</label> 
    <%= f.collection_select :team_id, @teams.all, :id, :name, {include_blank: true}, {required: true}  %>
  </div>
  <div class="field">
    <label for="details_name">Description</label> 
    <%= f.text_area 'details' %>
  </div>

  <% if @current_member != nil and @current_member.is_lead %>
    <div class="field">
      <%= f.label :active %>
      <%= f.check_box :active %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
