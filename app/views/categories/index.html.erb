<p id="notice"><%= notice %></p>

<h2>Categories</h2>
<% if @current_member != nil and @current_member.is_lead %>
<%= link_to 'Add Category', new_category_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category_path(category) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

