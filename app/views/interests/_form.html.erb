      <ul>
      <% interest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @topic != nil %>
    <div class="field">
      <%= f.label :topic_id %>
      <%= f.hidden_field :topic_id %>
      <%= @topic.name %>
    </div>

    <div class="field">
      <%= f.label :member_id %>
      <%= f.collection_select(:member_id, @members, :id, :name, required: true) %>
    </div>
  <% end %>

  <% if @member != nil %>
    <div class="field">
      <%= f.label :member_id %>
      <%= f.hidden_field :member_id %>
      <%= @member.name %>
    </div>

    <div class="field">
      <%= f.label :topic_id %>
      <%= f.collection_select(:topic_id, @topics, :id, :name, required: true) %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
